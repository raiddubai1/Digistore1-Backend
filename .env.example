# ============================================
# DATABASE
# ============================================
# Local: postgresql://username:password@localhost:5432/digistore1?schema=public
# Render: Get from Render PostgreSQL dashboard (Internal Database URL)
# Supabase: Get from Supabase project settings
DATABASE_URL="postgresql://username:password@localhost:5432/digistore1?schema=public"

# ============================================
# SERVER
# ============================================
PORT=5000
NODE_ENV=development
HOST=0.0.0.0

# ============================================
# JWT SECRETS
# ============================================
# IMPORTANT: Generate strong random strings for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# CORS & FRONTEND
# ============================================
# Local: http://localhost:3000
# Vercel: https://your-app.vercel.app
FRONTEND_URL=http://localhost:3000

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=digistore1-products

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Digistore1 <noreply@digistore1.com>

# Platform Settings
PLATFORM_COMMISSION_RATE=0.15
VENDOR_PAYOUT_THRESHOLD=50.00
MAX_FILE_SIZE=524288000
ALLOWED_FILE_TYPES=pdf,zip,mp4,mp3,jpg,png,xlsx,docx,pptx

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Download Links
DOWNLOAD_LINK_EXPIRY_HOURS=48
MAX_DOWNLOAD_ATTEMPTS=5

